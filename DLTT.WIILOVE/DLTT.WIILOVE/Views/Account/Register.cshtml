@model DLTT.WIILOVE.Data.Model.Param.User

@{
    Layout = null;
}


<!DOCTYPE html>
<!-- html -->
<html>
<!-- head -->
<head>
    <title>Đăng ký Wiilove | wiilove</title>
    <link href="~/Styles/css/bootstrap.css" rel="stylesheet" type="text/css" media="all" /><!-- bootstrap-CSS -->
    <link href="~/Styles/css/font-awesome.css" rel="stylesheet" type="text/css" media="all" /><!-- Fontawesome-CSS -->
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="~/scripts/js/jquery-2.2.3.min.js"></script>
    <!-- Custom Theme files -->
    <!--theme-style-->
    <link href="~/Styles/css/style.css" rel="stylesheet" />
    <link href="~/Styles/css/redirectregister.css" rel="stylesheet" />
    <link href="~/Styles/css/menu.css" rel="stylesheet" />
    <!--//theme-style-->
    <!--meta data-->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <meta name="keywords" content="" />
    <link href="~/Styles/css/bootstrapValidator.min.css" rel="stylesheet" />
    <script src="~/scripts/js/bootstrapValidator.min.js"></script>
    <script src="~/scripts/js/Validate/Register.js"></script>
    <link href="~/Styles/css/AdminLTE.min.css" rel="stylesheet" />
    <link href="~/Styles/css/_all-skins.min.css" rel="stylesheet" />
    <!-- //nav smooth scroll -->
</head>
<!-- //head -->

<body class="hold-transition skin-blue sidebar-mini">

    <header class="main-header">
        <!-- Logo -->
        <a href="@Url.Action("Index","Home")" class="logo">
            <!-- mini logo for sidebar mini 50x50 pixels -->
            <span class="logo-mini"><b>L</b>ove</span>
            <!-- logo for regular state and mobile devices -->
            <span class="logo-lg"><b>Wii</b>Love</span>
        </a>
        <!-- Header Navbar: style can be found in header.less -->
        <nav class="navbar navbar-static-top">


        </nav>
    </header>


    <div class="wrapper_register_form" style="background-color: #e9ebee;     line-height: 2.428571;">
        <div class="container1" style="padding :10px;width:500px;margin:0 auto;">
            <label style=" font-size:36px; font-weight:bold; font-family:inherit; margin-bottom: 8px; padding-bottom: 5px;">Đăng ký Wiilove</label>
            <form class="form-horizontal" id="formValidator" action="@Url.Action("Register", "Account")" role="form" method="post">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-sm-6">
                        <input type="text" id="FirstName" name="FirstName" value="@Model.FirstName" placeholder="Tên" class="form-control" autofocus required>
                    </div>
                    <div class="col-sm-6">
                        <input type="text" id="LastName" name="LastName" value="@Model.LastName" placeholder="Họ" class="form-control" required>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-12">
                        <input type="text" class="form-control" id="EmailOrPhone" value="@Model.EmailOrPhone" name="EmailOrPhone" placeholder="Email hoặc số điện thoại" required>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <input type="password" class="form-control" id="Password" name="Password" placeholder="Mật khẩu" required>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <input type="password" class="form-control" id="RetypePassword" name="RetypePassword" placeholder="Nhập lại mật khẩu" required>
                    </div>
                </div>
                <label style="font-style: normal;">Ngày sinh</label>
                <div class="form-group row">
                    <div class="col-lg-3">
                        <select class="form-control" id="Day" name="Day">
                            @for (var i = 1; i < 32; i++)
                            {
                                <option value="@i">@i</option>
                            }

                        </select>
                    </div>
                    <div class="col-lg-4">
                        <select class="form-control" id="Month" name="Month">
                            @for (var i = 1; i < 13; i++)
                            {
                                <option value="@i">Tháng @i</option>
                            }
                        </select>
                    </div>
                    <div class="col-lg-3">
                        <select class="form-control" name="Year" id="Year">
                            @{
                                var year = DateTime.Now.Year - 18;
                            }
                            @for (var i = year; i > year - 100; i--)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-3">
                            <label>
                                <input type="radio" name="Gender" id="optionsRadios1" value="1" checked>
                                Nam
                            </label>
                        </div>
                        <div class="col-md-3">
                            <label>
                                <input type="radio" name="Gender" id="optionsRadios2" value="0">
                                Nữ
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-12 ">
                        <div class="row">
                            <div class="col-sm-12">
                                <label>
                                    <input type="checkbox" id="Terms" name="Terms" value="true">
                                    Tôi đã đọc và đồng ý với <a href="terms.html">Điều khoản và Điều kiện</a>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.form-group -->
                <div class="form-group">
                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-primary btn-block">Đăng ký</button>
                    </div>
                </div>
            </form>
        </div>
    </div> <!-- ./container -->
    <!-- body -->
    <!-- footer -->
    <footer style="margin: 0 auto">
        <div class="copy-right">
            <div class="container">
                <p>© 2017 Match. All rights reserved | Design by <a href="http://w3layouts.com"> W3layouts.</a></p>
            </div>
        </div>
    </footer>

</body>
<!-- //body -->
</html>
<!-- //html -->
