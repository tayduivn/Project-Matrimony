                                                    <span></span>
                                                    <span class="check"></span>
                                                    <span class="box"></span>Vina
                                                </label>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="md-radio has-warning" style="margin-left: 15%;">
                                                <input type="radio" id="radio16" name="select_method" value="VIETTEL" class="md-radiobtn" checked="">
                                                <label for="radio16">
                                                    <span></span>
                                                    <span class="check"></span>
                                                    <span class="box"></span>Viettel
                                                </label>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="md-radio has-warning" style="margin-left: 10%" ;="">
                                                <input type="radio" id="radio17" name="select_method" value="GATE" class="md-radiobtn">
                                                <label for="radio17">
                                                    <span></span>
                                                    <span class="check"></span>
                                                    <span class="box"></span>Gate
                                                </label>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="md-radio has-warning" style="margin-left: 10%;">
                                                <input type="radio" id="radio18" name="select_method" value="VCOIN" class="md-radiobtn">
                                                <label for="radio18">
                                                    <span></span>
                                                    <span class="check"></span>
                                                    <span class="box"></span>Vcoin
                                                </label>
                                            </div>
                                        </td>
                                    </tr>


                                    </tbody>
                                </table>
                                <br><br><br>
                                <div class="row" id="cennter">
                                      
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <div class="form-group form-md-line-input form-md-floating-label has-warning">
                                            <input type="text" class="form-control" id="seriNumber" name="seriNumber">
                                            <label for="seriNumber">SỐ SERI</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <div class="form-group form-md-line-input form-md-floating-label has-warning">
                                            <input type="text" class="form-control" id="code" name="code">
