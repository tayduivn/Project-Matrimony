
@{
    ViewBag.Title = "Nạp tiền";
    Layout = "~/Views/Shares/_LayoutUser.cshtml";
}
@section Styles{
<link href="~/Styles/css/donate.css" rel="stylesheet" />
}

<div class="mid" style="margin: 30px 0">
    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <div class="btn-pref btn-group btn-group-justified btn-group-lg" role="group" aria-label="...">
                    <div class="btn-group" role="group">
                        <button type="button" id="stars" class="btn btn-warning" href="#tab1" data-toggle="tab">
                            <br>
                            <i class="fa fa-star fa-2x"></i>
                            <div class="hidden-xs">THẺ ĐIỆN THOẠI</div>
                        </button>
                    </div>
                    <div class="btn-group" role="group">
