<script src="~/scripts/js/Validate/Register.js"></script>
<div class="w3layouts-banner" id="home">
    <div class="container">
        <div class="clearfix"></div>
        <div class="agileits-register">
            <h3>Đăng kí ngay!</h3>
            <form id="formValidator" action="@Url.Action("Register", "Account" )" role="form" method="post">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="row">
                    <div class="form-group col-md-6">
                        <input type="text" placeholder="Tên" id="FirstName" name="FirstName" class="form-control" required>
                        @Html.ValidationMessageFor(model => model.User.FirstName, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group  col-md-6">
                        <input type="text" placeholder="Họ" id="LastName" name="LastName" class="form-control" required>
                        @Html.ValidationMessageFor(model => model.User.LastName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" id="EmailOrPhone" name="EmailOrPhone" placeholder="Email hoặc số điện thoại" required>
                    @Html.ValidationMessageFor(model => model.User.EmailOrPhone, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="Password" name="Password" placeholder="Mật khẩu" required>
                    @Html.ValidationMessageFor(model => model.User.Password, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="RetypePassword" name="RetypePassword" placeholder="Nhập lại mật khẩu" required>
                    @Html.ValidationMessageFor(model => model.User.RetypePassword, "", new { @class = "text-danger" })
                </div>
                <label style="font-style: normal;">Ngày sinh</label>
                <div class="form-group row">
                    <div class="col-lg-3">
                        <select class="form-control" id="Day" name="Day">
                            @for (var i = 1; i < 32; i++)
                            {
                                <option value="@i">@i</option>

                            }

                        </select>
                        @Html.ValidationMessageFor(model => model.User.Day, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-4">
                        <select class="form-control" id="Month" name="Month">
                            @for (var i = 1; i < 13; i++)
                            {
                                <option value="@i">Tháng @i</option>

                            }
                        </select>
                        @Html.ValidationMessageFor(model => model.User.Month, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-3">
                        <select class="form-control" name="Year" id="Year">
                            @{
                                var year = DateTime.Now.Year - 18;
                            }
                            @for (var i = year; i > year - 100; i--)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                        @Html.ValidationMessageFor(model => model.User.Year, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-3">
                            <label>
                                <input type="radio" name="Gender" id="optionsRadios1" value="1" checked>
                                Nam
                            </label>
                        </div>
                        <div class="col-md-3">
                            <label>
                                <input type="radio" name="Gender" id="optionsRadios2" value="0">
                                Nữ
                            </label>
                        </div>
                        @Html.ValidationMessageFor(model => model.User.Gender, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="w3-agree">
                    <label>
                        <input type="checkbox" id="Terms" name="Terms" value="true">
                        Tôi đã đọc và đồng ý với <a href="terms.html">Điều khoản và Điều kiện</a>
                    </label>
                </div>
                <input type="submit" style="margin-top:0px; margin-bottom:10px;" value="Đăng kí" />
                <div class="clearfix"> </div>
                <div class="w3ls-login" style="text-align: center;">
                    Bạn đã là thành viên?
                    <a data-toggle="modal" href="@Url.Action("Login", "Account")" data-target="#myModal">Đăng nhập</a>
                </div>
            </form>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">

                </div> <!-- /.modal-content -->
            </div> <!-- /.modal-dialog -->
        </div> <!-- /.modal -->
        <!-- //Modal -->
    </div>
</div>


