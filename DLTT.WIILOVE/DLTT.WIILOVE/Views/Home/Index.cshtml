<form class="form-horizontal" action="@Url.Action("Index","Search")" method="post" role="form">
    <fieldset class="abc">

        <div class="form-group col-md-12">
            <label class="col-md-12 control-label" for="location" style="text-align:center ; font-family :Arial; font-size :35px ; color:#3c8dbc;">Tìm kiếm</label>
        </div>
        <div class="form-group col-md-4">
            <label class="col-md-4 control-label" for="location">Tên: </label>
            <div class="col-md-8">
                <input id="TextSearch" name="TextSearch" type="text" placeholder="Tên" class="form-control input-md">
            </div>
        </div>
        <!-- Select Basic -->
        <div class="form-group col-md-4">
            <label class="col-md-4 control-label" for="inlineRadio2">Giới tính: </label>
            <div class="col-md-8">
                <label class="radio-inline">
                    <input type="radio" checked="checked" name="Gender" id="inlineRadio1" value="1"> Nam
                </label>
                <label class="radio-inline">
                    <input type="radio" name="Gender" id="inlineRadio2" value="0"> Nữ
                </label>
            </div>
        </div>
        <!-- Select Basic -->
        <div class="form-group col-md-2">
            <label class="col-md-4 control-label" for="FormAge">Tuổi từ</label>
            <div class="col-md-8">
                <select class="form-control" name="FormAge" id="FormAge">
                    @{
                        for (var i = 18; i < 99; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    }
                </select>
            </div>
        </div>
        <!-- Select Basic -->
        <div class="form-group col-md-2">
            <label class="col-md-4 control-label" for="price_min">đến</label>
            <div class="col-md-8">
                <select class="form-control" name="ToAge" id="ToAge">
                    @{
                        for (var i = 18; i < 99; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    }
                </select>
            </div>
        </div>
        <!-- Select Basic -->
        <div class="form-group col-md-4">
            <label class="col-md-4 control-label" for="price_min">Thành Phố</label>
            <div class="col-md-8">
                <select id="price_min" name="price_min" class="form-control">

                    <option value="Hanoi">Hà Nội</option>

                </select>
            </div>
        </div>
        <div class="form-group col-md-4">
            <label class="col-md-4 control-label" for="price_min">Tôn giáo</label>
            <div class="col-md-8">
                <select id="price_min" name="price_min" class="form-control">

                    <option value="phatgiao">Phật Giáo</option>

                </select>
            </div>
        </div>
        <!-- Button -->
        <div class="form-group col-md-4">
            <label class="col-md-12 control-label" for="submit"></label>
            <div class="col-md-12">
                <button id="submit" name="submit" class="btn btn-primary col-md-12">Search</button>
            </div>
        </div>
    </fieldset>
</form>

